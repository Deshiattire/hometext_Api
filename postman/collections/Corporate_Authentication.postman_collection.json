        {
          "name": "Corporate Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.data && jsonData.data.authorization && jsonData.data.authorization.token) {",
                  "        pm.environment.set('corporate_token', jsonData.data.authorization.token);",
                  "        console.log('Corporate token saved:', jsonData.data.authorization.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
