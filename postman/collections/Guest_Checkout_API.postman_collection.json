			},
			"response": []
		},
		{
			"name": "4. Track Order - By Token",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/guest/orders/track?token={{guestToken}}",
					"host": ["{{baseUrl}}"],
					"path": ["guest", "orders", "track"],
					"query": [
						{
							"key": "token",
							"value": "{{guestToken}}"
						}
					]
				},
				"description": "Track guest order using the token received after checkout"
			},
			"response": []
		},
		{
			"name": "5. Track Order - By Email & Order Number",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/guest/orders/track?orderNumber={{orderNumber}}&email=guest.customer@example.com",
					"host": ["{{baseUrl}}"],
					"path": ["guest", "orders", "track"],
					"query": [
						{
							"key": "orderNumber",
							"value": "{{orderNumber}}"
						},
						{
							"key": "email",
							"value": "guest.customer@example.com"
						}
					]
				},
				"description": "Track guest order using order number and email address"
			},
			"response": []
		},
		{
			"name": "6. Lookup Order - Get Tracking URL",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Accept",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"orderNumber\": \"{{orderNumber}}\",\n    \"email\": \"guest.customer@example.com\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/guest/orders/lookup",
					"host": ["{{baseUrl}}"],
					"path": ["guest", "orders", "lookup"]
				},
				"description": "Look up order by email and order number to get tracking URL"
			},
			"response": []
		},
