				"body": {
					"mode": "raw",
					"raw": "{\n    \"customer\": {\n        \"email\": \"bkash.customer@example.com\",\n        \"phone\": \"01812345678\",\n        \"firstName\": \"Rahim\",\n        \"lastName\": \"Ahmed\",\n        \"acceptsMarketing\": true\n    },\n    \"items\": [\n        {\n            \"id\": 32,\n            \"quantity\": 1\n        }\n    ],\n    \"shippingAddress\": {\n        \"firstName\": \"Rahim\",\n        \"lastName\": \"Ahmed\",\n        \"phone\": \"01812345678\",\n        \"email\": \"bkash.customer@example.com\",\n        \"addressLine1\": \"Flat 4B, Sunrise Tower\",\n        \"addressLine2\": \"Gulshan-2\",\n        \"city\": \"Dhaka\",\n        \"state\": \"Dhaka Division\",\n        \"postalCode\": \"1212\",\n        \"country\": \"Bangladesh\"\n    },\n    \"billingAddress\": {\n        \"firstName\": \"Rahim\",\n        \"lastName\": \"Ahmed\",\n        \"phone\": \"01812345678\",\n        \"addressLine1\": \"Flat 4B, Sunrise Tower\",\n        \"city\": \"Dhaka\",\n        \"postalCode\": \"1212\",\n        \"country\": \"Bangladesh\"\n    },\n    \"billingSameAsShipping\": false,\n    \"paymentMethod\": {\n        \"type\": \"bkash\",\n        \"transactionId\": \"TXN123456789\"\n    },\n    \"notes\": \"Gift wrap please\",\n    \"deliveryType\": 1\n}"
