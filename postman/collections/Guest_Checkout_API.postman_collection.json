						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Accept",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"customer\": {\n        \"email\": \"minimal@example.com\",\n        \"phone\": \"01912345678\",\n        \"firstName\": \"Karim\"\n    },\n    \"items\": [\n        {\n            \"id\": 39,\n            \"quantity\": 1\n        }\n    ],\n    \"shippingAddress\": {\n        \"firstName\": \"Karim\",\n        \"phone\": \"01912345678\",\n        \"addressLine1\": \"123 Test Street\",\n        \"city\": \"Dhaka\",\n        \"postalCode\": \"1000\",\n        \"country\": \"Bangladesh\"\n    },\n    \"paymentMethod\": {\n        \"type\": \"cod\"\n    }\n}"
