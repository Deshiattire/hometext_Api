{
	"info": {
		"_postman_id": "guest-checkout-collection",
		"name": "Guest Checkout API",
		"description": "API collection for testing guest checkout functionality",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://127.0.0.1:8000/api",
			"type": "string"
		},
		{
			"key": "guestToken",
			"value": "",
			"type": "string"
		},
		{
			"key": "orderNumber",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "1. Guest Checkout - Place Order (COD)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 201) {",
							"    var jsonData = pm.response.json();",
							"    if (jsonData.data && jsonData.data.order) {",
							"        pm.collectionVariables.set('guestToken', jsonData.data.order.guestToken);",
							"        pm.collectionVariables.set('orderNumber', jsonData.data.order.orderNumber);",
							"        console.log('Guest Token saved:', jsonData.data.order.guestToken);",
							"        console.log('Order Number saved:', jsonData.data.order.orderNumber);",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Accept",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"customer\": {\n        \"email\": \"guest.customer@example.com\",\n        \"phone\": \"01712345678\",\n        \"firstName\": \"John\",\n        \"lastName\": \"Doe\",\n        \"acceptsMarketing\": false\n    },\n    \"items\": [\n        {\n            \"id\": 30,\n            \"quantity\": 2\n        },\n        {\n            \"id\": 31,\n            \"quantity\": 1\n        }\n    ],\n    \"shippingAddress\": {\n        \"firstName\": \"John\",\n        \"lastName\": \"Doe\",\n        \"phone\": \"01712345678\",\n        \"email\": \"guest.customer@example.com\",\n        \"addressLine1\": \"House 123, Road 5, Block A\",\n        \"addressLine2\": \"Banani\",\n        \"city\": \"Dhaka\",\n        \"state\": \"Dhaka Division\",\n        \"postalCode\": \"1213\",\n        \"country\": \"Bangladesh\"\n    },\n    \"billingSameAsShipping\": true,\n    \"paymentMethod\": {\n        \"type\": \"cod\",\n        \"transactionId\": null\n    },\n    \"notes\": \"Please call before delivery. Gate code is 1234.\",\n    \"deliveryType\": 0\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/guest/checkout",
					"host": ["{{baseUrl}}"],
					"path": ["guest", "checkout"]
				},
				"description": "Place a guest order with Cash on Delivery payment method"
			},
			"response": []
		},
